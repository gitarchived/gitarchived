---
import { Image } from "astro:assets";
import logo from "../images/gitarchived.png";
import Search from "../components/Search.svelte";
import Layout from "../layouts/Layout.astro";
---

<Layout title="GitArchived">
  <div class="flex h-screen w-full flex-col bg-stone-800">
    <div class="w-full bg-red-400 px-2 text-black">
      <div class="m-auto flex w-full max-w-screen-lg justify-center py-1 text-center font-bold">
        <span>
          GitArchived is in alpha. Join our
          <a href="https://discord.gg/afE7trvbYj" target="_blank" class="underline">Discord</a> to report
          bugs.
        </span>
      </div>
    </div>
    <main class="flex h-full w-full flex-col items-center justify-center gap-2">
      <Image src={logo} alt="GitArchived's logo" width="250" />
      <Search client:load />
    </main>
    <footer
      class="flex w-full flex-col items-center justify-center gap-2 border-t border-stone-50/10 p-2 text-white/90"
    >
      <span>Archived with ðŸ“¦GitArchived.</span>
      <span>
        View the source on <a
          href="https://github.com/gitarchived/gitarchived"
          class="font-bold hover:underline">GitHub</a
        >.
      </span>
    </footer>
  </div>
</Layout>

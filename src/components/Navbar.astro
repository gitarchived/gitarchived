---
import { Image } from "astro:assets";
import logo from "../images/gitarchived.png";

interface Props {
  query?: string;
}

const { query } = Astro.props;
---

<nav class="flex items-center justify-between bg-stone-900 p-2">
  <div class="flex items-center space-x-2">
    <a href="/">
      <Image src={logo} alt="GitArchived" width="50" />
    </a>
    <form action="/search" method="GET">
      <input
        type="text"
        name="q"
        value={query}
        placeholder="Search... (e.g. svelte)"
        class="rounded-md bg-stone-800 p-1.5 px-3 text-stone-100 focus:outline-none"
      />
    </form>
  </div>
</nav>
